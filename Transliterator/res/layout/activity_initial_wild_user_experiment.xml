<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/initial_activity_background"
    android:backgroundTint="#D1C0C0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/text_enter"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="350dp"
            android:backgroundTint="@android:color/background_dark"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter text"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:scrollbars="horizontal"
            android:textColor="#150404"
            android:textColorHighlight="#0E0C0C"
            android:textColorHint="#F8194C19"
            android:textColorLink="#221C1C"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timer_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="60dp"
            android:textAlignment="viewStart"
            android:textColor="#3E0847"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/next_view"
            android:layout_width="38dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="317dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/ic_baseline_send_24"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/id_sentence_card"
            android:layout_width="360dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="122dp"
            app:cardBackgroundColor="#D2201D20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <TextView
                android:id="@+id/id_sentence"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="#C7C0D3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="6dp"
                android:paddingRight="3dp"/>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>