<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/initial_activity_background"
    android:backgroundTint="#59591A06">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="39dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="326dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/ic_baseline_send_24" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="174dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/btn_play"
            android:clickable="true" />

        <EditText
            android:id="@+id/text_enter"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="@android:color/background_dark"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter text"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:scrollbars="horizontal"
            android:textAlignment="viewStart"
            android:textColor="#150404"
            android:textColorHighlight="#0E0C0C"
            android:textColorHint="#F8133E13"
            android:textColorLink="#221C1C"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/timer_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="60dp"
            android:textAlignment="viewStart"
            android:textColor="#E9490F53"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/brk_timer"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="99dp" />

        <TextView
            android:id="@+id/sessionInfo"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="93dp"
            android:layout_marginBottom="38dp"
            android:textColor="#1B2871"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/id_sentence_card"
            android:layout_width="360dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="152dp"
            app:cardBackgroundColor="#D2201D20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingClass">

            <TextView
                android:id="@+id/id_sentence"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="6dp"
                android:paddingRight="3dp"
                android:textAlignment="center"
                android:textColor="#FBFAFD"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- <Button
             android:id="@+id/btn_stop"
             android:layout_width="wrap_content"
             android:layout_height="67dp"
             android:layout_alignParentEnd="true"
             android:layout_alignParentBottom="true"
             android:layout_centerInParent="true"
             android:layout_marginEnd="108dp"
             android:layout_marginBottom="62dp"
             android:background="@drawable/btn_stop" /> -->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>