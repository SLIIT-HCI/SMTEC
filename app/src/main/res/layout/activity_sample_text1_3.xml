<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_sample_text1_3"
    android:background="@drawable/b21">

    <TextView
        android:id="@+id/viewPhrase"
        android:layout_width="381dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="150dp"
        android:text="Let's Begin!" />

    <TextView
        android:id="@+id/sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        android:text="@string/sample1_3"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="293dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:text="next" />

    <EditText
        android:id="@+id/typeText"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="233dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/play_pause1"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeText"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="173dp"
        android:layout_marginBottom="217dp"
        android:background="@drawable/btn_play"
        android:backgroundTint="#247C05"
        android:clickable="true" />

    <EditText
        android:id="@+id/enterSessionNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:hint="Session"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="83dp"
        android:text="Please Enter the session Number"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sampleSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="266dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="102dp"
        android:backgroundTint="#20681E"
        android:text="Submit" />

    <TextView
        android:id="@+id/count"
        android:layout_width="54dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/sample"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="1" />


</RelativeLayout>