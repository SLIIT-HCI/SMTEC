<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alertScreen"
    android:background="@drawable/back12">

    <RadioButton
        android:id="@+id/startRB"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="133dp"
        android:layout_marginBottom="292dp"
        android:text="@string/startRB" />

    <TextView
        android:id="@+id/alertTV"
        android:layout_width="381dp"
        android:layout_height="56dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:text="@string/alertMsg"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/oneMinRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="249dp"
        android:text="@string/OneMin" />

    <RadioButton
        android:id="@+id/twoMinRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="211dp"
        android:text="@string/TwoMin" />

    <RadioButton
        android:id="@+id/fiveMinRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="172dp"
        android:text="@string/FiveMin" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        app:srcCompat="@drawable/image8" />


</RelativeLayout>