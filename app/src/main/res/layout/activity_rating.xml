<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rating"
    android:background="@drawable/back8">


    <Button
        android:id="@+id/RSubmitTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="Next"
        app:backgroundTint="#3F51B5" />


    <TextView
        android:id="@+id/ratingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="11dp"
        android:text="Rate Yourself"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rate1"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:text="@string/R1"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar5"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="66dp" />

    <TextView
        android:id="@+id/rate2"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:text="@string/R2"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar6"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="143dp" />

    <TextView
        android:id="@+id/rate3"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="277dp"
        android:text="@string/R3"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/type"
        android:layout_width="285dp"
        android:layout_height="32dp"
        android:layout_below="@+id/ratingBar7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="102dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/STK"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:text="@string/R3_1" />

        <RadioButton
            android:id="@+id/SGK"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/R3_2" />
    </RadioGroup>

    <TextView
        android:id="@+id/handPosture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="144dp"
        android:text="@string/R5"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/postureRG"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/handPosture"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/singleThumb"
            android:layout_width="120dp"
            android:layout_height="21dp"
            android:text="@string/R5_2" />

        <RadioButton
            android:id="@+id/singleFinger"
            android:layout_width="120dp"
            android:layout_height="21dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:text="@string/R5_1" />

        <RadioButton
            android:id="@+id/doubleThumb"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="11dp"
            android:text="@string/R5_3" />

    </RadioGroup>

    <TextView
        android:id="@+id/comment"
        android:layout_width="151dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="217dp"
        android:text="@string/R6"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/commentEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="469dp"
        android:layout_marginBottom="220dp"
        android:ems="10"
        android:hint="Type your Comment here.."
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:text="@string/R4"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar7"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/rate2SubmitBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        app:backgroundTint="#3F51B5" />


</RelativeLayout>