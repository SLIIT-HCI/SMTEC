<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveTime_Selection">

    <TextView
        android:id="@+id/TimeText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="66dp"
        android:text="Experiment Start At"
        android:textColor="#090"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="78dp"
        android:layout_toEndOf="@+id/TimeText"
        android:text="Time"
        android:textColor="#090"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TimePicker
        android:id="@+id/simpleTimePicker"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/timeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="86dp"
        android:layout_toEndOf="@+id/TimeText"
        android:text="Time"
        android:textColor="#090"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TimePicker
        android:id="@+id/simpleTimePicker2"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_below="@+id/simpleTimePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/TimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="330dp"
        android:text="Experiment End At"
        android:textColor="#090"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="14dp"
        android:text="Active Time"
        android:textColor="#041759"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submitTime"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="71dp"
        android:clickable="true"
        app:backgroundTint="#0E9709"
        app:srcCompat="@drawable/icon_check2" />
</RelativeLayout>

