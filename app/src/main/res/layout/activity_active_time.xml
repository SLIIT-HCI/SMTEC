<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back10"
    tools:context=".activeTime">

    <TextView
        android:id="@+id/activeTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="52dp"
        android:text="Active Time"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtActiveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activeTimeTV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Please Select Your Active Time Range"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtActiveTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activeTimeTV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:text="Please Enter User ID Before Selecting Time range!"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activeTimeTV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text="Assume 0 is 12 am"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeRange"
        android:layout_width="174dp"
        android:layout_height="79dp"
        android:layout_below="@+id/rangeSlider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="127dp"
        android:text=" 12am - 12am "
        android:textSize="20dp" />

    <me.bendik.simplerangeview.SimpleRangeView
        android:id="@+id/rangeSlider"
        android:layout_width="376dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="9dp"
        app:count="24"
        app:movable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeRange"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="325dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        app:backgroundTint="#0E9709"
        app:srcCompat="@drawable/icon_check2" />


</RelativeLayout>